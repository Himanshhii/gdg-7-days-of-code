#include <iostream>
using namespace std;

int main() {
    string input;
    cout << "Enter a string: ";
    getline(cin, input);  // Read the output 

    int vowelCount = 0;  
    for (int i = 0; i < input.length(); i++) {
        char c = tolower(input[i]);  

        // Check if the character is a vowel
        if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u') {
            vowelCount++;  // Increment vowel count
        }
    }

    //Total count of vowels
    cout << "Total vowels: " << vowelCount << endl;

    return 0;
}