#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter the size of the array: ";
    cin >> n;

    // Declare an array 
    int arr[n];

    cout << "Enter the array elements: ";
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    int positiveSum = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) {
            positiveSum += arr[i];
        }
    }

    cout << "Sum of all positive numbers: " << positiveSum << endl;
    return 0;
}